@model SailorsWebApi.Models.SailingEquipment

@{
    ViewBag.Title = "Delete";
}

<h2>Sprzęt do wynajęcia</h2>

<h3>Jesteś pewien, że chcesz to usunąć?</h3>
<div>
    <h4>Usuń</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa sprzętu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.equipmentName)
        </dd>

        <dt>
            Typ sprzętu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EquipmentTypes.typeName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Wróć do listy", "Index")
        </div>
    }
</div>
